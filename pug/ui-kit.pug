extends ../base/layout

block variables
  - var title = "Компоненты"
  - var hasHeader = false
  - var hasHeaderNoFullpage = false
  - var hasFooter = false
  - var hasFullpage = false
  - var currentPage = ""

block main
  style.
    body {
      background: linear-gradient(180deg, #da0052 0%, #5f00bd 100%);
      color: #ffffff;
    }

    main > .container {
      padding-top: 30px;
      padding-bottom: 30px;
    }

    .components-backwards {
      display: inline-block;
      margin-bottom: 10px;
      margin-left: 7px;
      color: #ffffff;
    }

    .components-backwards span:first-child {
      position: relative;
      top: -3px;

      display: inline-block;
      margin-right: 15px;

      font-size: 16px;
      line-height: 24px;
      vertical-align: top;

      transform: scale(2);
    }

    .components-backwards span:last-child {
      font-size: 16px;
      line-height: 24px;
    }

    .components-backwards + h1 {
      margin-bottom: 0;
    }

    .container > section {
      padding: 20px 0;
    }

